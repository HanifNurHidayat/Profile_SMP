<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/protokol" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/garis1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/backgruond"
                    android:onClick="profileclick">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/iv1"
                        android:layout_alignTop="@id/iv1"
                        android:layout_alignRight="@+id/iv1"
                        android:layout_alignBottom="@id/iv1"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:text="Profile"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/backgruond"
                    android:onClick="organisasiclick">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/organization" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/iv2"
                        android:layout_alignTop="@id/iv2"
                        android:layout_alignRight="@+id/iv2"
                        android:layout_alignBottom="@id/iv2"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:text="Organisasi"
                        android:textColor="#000000" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/garis2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/garis1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/backgruond"
                    android:onClick="guruclick">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/guru" />

                    <TextView
                        android:id="@+id/textimage2"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/image2"
                        android:layout_alignTop="@id/image2"
                        android:layout_alignRight="@+id/image2"
                        android:layout_alignBottom="@id/image2"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:text="Guru dan Staff"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/backgruond"
                    android:onClick="fasilitasclick">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/fasilitas" />

                    <TextView
                        android:id="@+id/textimage1"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/image1"
                        android:layout_alignTop="@id/image1"
                        android:layout_alignRight="@+id/image1"
                        android:layout_alignBottom="@id/image1"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:text="Fasilitas"
                        android:textColor="#000000" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/garis3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/garis2"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/backgruond"
                    android:gravity="center"
                    android:onClick="galericlick">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="30dp"
                        android:src="@drawable/gallery" />

                    <TextView
                        android:id="@+id/textimage3"
                        android:layout_width="64dp"
                        android:layout_height="23dp"
                        android:layout_alignLeft="@+id/image3"
                        android:layout_alignTop="@id/image3"
                        android:layout_alignRight="@+id/image3"
                        android:layout_alignBottom="@id/image3"
                        android:layout_marginTop="90dp"
                        android:gravity="center"
                        android:text="Galeri"
                        android:textColor="#000000" />
                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>